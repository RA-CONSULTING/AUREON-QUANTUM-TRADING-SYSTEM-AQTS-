# AUREON Quantum Trading System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === Binance API Configuration ===
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# === Trading Mode Configuration ===
# Set to 'true' to use Binance TESTNET (recommended for testing)
# Set to 'false' for LIVE TRADING (requires real funds - use with caution)
BINANCE_TESTNET=true

# === Safety Configuration ===
# Keep PAPER_MODE=true for simulated trading (no real orders)
# Set to 'false' only when ready for LIVE trading
PAPER_MODE=true

# === Environment ===
NODE_ENV=development

# === Logging Configuration ===
LOG_LEVEL=info
VERBOSE_LOGGING=false

# === Risk Management ===
MAX_ORDER_SIZE=10000
MAX_DAILY_TRADES=1000
RISK_LIMIT_PERCENT=2
